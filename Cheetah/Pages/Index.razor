@page "/Request"
@inject IJSRuntime _JSRuntime
<PageTitle>درخواست جدید</PageTitle>

<div>
    <h1>طراحی فرآیند</h1>
    <br />
    <div class="btn-group" role="group" aria-label="Basic example" style="direction: ltr;width: 20em;">
        <button id="save-button" class="btn btn-info">ذخیره اطلاعات</button>
        <button class="btn btn-primary" @onclick="TestConfirmation">بارگزاری اطلاعات</button>
    </div>
</div>
<br />
<div  id="canvas" style="height:400px;direction:ltr"></div>

@code {

    string value;

    void OnChange(string value, string name)
    {
        _JSRuntime.InvokeVoidAsync("ShowBPMN");

        //console.Log($"{name} value changed to {value}");
    }

    private async Task TestConfirmation()
    {
        await _JSRuntime.InvokeVoidAsync("ShowBPMN");
        value = "دیاگرام لود شد.";
    }

  
}
