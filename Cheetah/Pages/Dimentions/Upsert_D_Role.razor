@page "/Dimentions/Create/D_Role"
@page "/Dimentions/Edit/D_Role/{Id:long}"

@inject ISimpleClassRepository simpleClassRepository;
@inject NavigationManager _NavigationManager;

<FormGenericTypeItems Record="@Record"
                      Name="@Name" Title="@Title" IsLoading="@IsLoading">
</FormGenericTypeItems>
@code {
    [Parameter]
    public long Id { get; set; } = 0;
    [Parameter]
    public String Name { get; set;} = "D_Role";

    public D_Role Record { get; set; }

    private String Title { get; set; } = "ایجاد";

    public Boolean IsLoading { get; set; } = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Title = (Id > 0) ? "ذخیره" : "ایجاد";
            await LoadDTO();
        }
    }

    private async Task LoadDTO()
    {
        IsLoading = true;
        StateHasChanged();
        Record = await simpleClassRepository.Get(Name, Id) as D_Role;
        IsLoading = false;
        StateHasChanged();
    }
}