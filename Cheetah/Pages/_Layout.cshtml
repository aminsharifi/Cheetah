    <script defer>
        function myTimer() {
            $('.CustomTable').each(function () {
                $(this).removeClass("CustomTable")
                    .DataTable({
                        order: [[1, "asc"]],
                        scrollX: true,
                        scrollY: 400,
                        scrollCollapse: true,
                        paging: false,
                        info: false,
                        "destroy": true,
                        language: {
                            url: 'js/datatables_fa.json',
                        },
                    });
            });
        }
        try {
            setInterval(myTimer, 100);
        } catch (error) {
            // Only runs when there is an error/exception
        } finally {
            // Code here always runs. Doesn't matter if there was an error or not.
        }
