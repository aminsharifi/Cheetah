    private async Task SelectedCaseStateChanged(ChangeEventArgs e, F_Action f_action)
    {
        if (Id > 0 && e.Value is not null)
        {
            var CaseStateId = Int64.Parse(e.Value.ToString());

            f_action.CaseState = List_CaseState
