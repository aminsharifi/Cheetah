@inherits CUpsert_GeneralCode

<CEditDimentions Record="@Record" Records="@Records" IsInline="@IsInline"
                 Name="D_TaskPattern" Id="@Id" reference="@reference"
                 ParentCallback="@ParentCallback" Title="@Title"
                 LinkRecords="@LinkRecords">
    <RowTemplate>
        @if (!IsLoading)
        {
            <div class="col-sm-11 col-lg-5">
                <span class="col-2">
                    @(globalization.GetValue(nameof(Localization.BlazorServer_Variable)))
                </span>
                <InputSelect class="col-12"
                             @bind-Value="((F_Condition)Record).TagId" style="direction:rtl"
                             @oninput="(e => SelectedParameterListChanged(e,(F_Condition)Record))">
                    <option @if (item.TagId is null){"selected"} value="">

                    </option>
                    @foreach (var list_D_ParameterList in List_D_Tag)
                    {
                        <option value="@list_D_ParameterList.Id">
                            @list_D_ParameterList.DisplayName (@list_D_ParameterList.Name)
                        </option>
                    }
                </InputSelect>
            </div>

            <div class="col-sm-11 col-lg-5">
                <span class="col-2">
                    @(globalization.GetValue(nameof(Localization.BlazorServer_Operand)))
                </span>
                <InputSelect class="col-12"
                             @bind-Value="((F_Condition)Record).OperandId" style="direction:rtl"
                             @oninput="(e => SelectedOperandChanged(e,(F_Condition)Record))">
                    <option @if (((F_Condition)Record).TagId is null){"selected"} value="">

                    </option>
                    @foreach (var list_D_Operand in List_D_Operand)
                    {
                        <option value="@list_D_Operand.Id">
                            @list_D_Operand.DisplayName
                        </option>
                    }
                </InputSelect>
            </div>

            <div class="col-sm-11 col-lg-5">
                <span class="col-2">
                    @(globalization.GetValue(nameof(Localization.BlazorServer_CellValue)))
                </span>
                @if (((F_Condition)Record).Tag is not null && ((F_Condition)Record).Operand is not null)
                {
                    @if (((F_Condition)Record).Tag?.TagTypeId is not null)
                    {
                        @if (((F_Condition)Record).Tag?.TagTypeId == 1)
                        {
                            <InputNumber class="col-12" @bind-Value="((F_Condition)Record).FloatValue"></InputNumber>
                        }
                        else if (((F_Condition)Record).Tag?.TagTypeId == 2)
                        {
                            <InputCheckbox class="col-12" @bind-Value="((F_Condition)Record).BooleanValue"></InputCheckbox>
                        }
                        else if (((F_Condition)Record).Tag?.TagTypeId == 3)
                        {
                            <InputDate class="col-12" @bind-Value="((F_Condition)Record).Value"></InputDate>
                        }
                        else if (((F_Condition)Record).Tag?.TagTypeId == 4)
                        {
                            <InputText class="col-12" @bind-Value="((F_Condition)Record).Value"></InputText>

                        }
                    }
                }
            </div>
        }
    </RowTemplate>
</CEditDimentions>
@code {

