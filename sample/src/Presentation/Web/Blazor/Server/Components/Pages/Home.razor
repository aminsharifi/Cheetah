@page "/"
@inherits MyComponentBase
@inject NavigationManager navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IConfiguration configuration
<h3>Home</h3>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var isAuthenticated = authState?.User.Identity.IsAuthenticated;
        if (bool.Parse(configuration["AI:Enable"]!))
        {
            if (isAuthenticated is true)
            {
                navigation.NavigateTo("/AI", replace: true);
            }
            else
            {
                navigation.NavigateTo("Account/Login?ReturnUrl=AI", replace: true);
            }
        }
        else
        {
            if (isAuthenticated is true)
            {
                navigation.NavigateTo("/List", replace: true);
            }
            else
            {
                navigation.NavigateTo("Account/Login?ReturnUrl=List", replace: true);
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
       
    }
}
